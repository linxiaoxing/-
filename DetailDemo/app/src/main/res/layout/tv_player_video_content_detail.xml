<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_player_video_content_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_player_video_content_detail_bg">

    <LinearLayout
        android:id="@+id/content_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/content_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_player_ctrl_video_record_swipe_chanel_logo"
                android:layout_width="@dimen/contents_detail_player_logo_width"
                android:layout_height="@dimen/contents_detail_player_logo_height"
                android:layout_marginTop="@dimen/swipe_margin"
                android:layout_marginStart="@dimen/swipe_margin"
                android:layout_marginBottom="@dimen/swipe_margin"
                android:background="@color/contents_logo_background_default_color"
                android:contentDescription="@null"/>

            <TextView
                android:id="@+id/tv_player_ctrl_video_record_swipe_chanel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/swipe_margin"
                android:layout_marginEnd="@dimen/swipe_margin"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/contents_player_landscape_title_text_color"
                android:textSize="@dimen/swipe_name_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/content_detail">

            <TextView
                android:id="@+id/tv_player_ctrl_video_record_swipe_chanel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/swipe_margin"
                android:layout_marginBottom="@dimen/swipe_margin"
                android:layout_marginEnd="@dimen/swipe_margin"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/white_text"
                android:textSize="@dimen/swipe_title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_player_ctrl_video_record_swipe_chanel_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/swipe_margin"
                android:layout_marginBottom="@dimen/swipe_margin"
                android:layout_marginEnd="@dimen/swipe_margin"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/swipe_chanel_date_text_color"
                android:textSize="@dimen/swipe_date_text_size" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/contents_detail_player_content_detail_switch_button_right_margin"
        android:gravity="right">

        <LinearLayout
            android:id="@+id/tv_player_ctrl_now_on_air_full_screen_iv_swipe_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/swipe_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tv_player_ctrl_now_on_air_full_screen_iv_swipe"
                android:layout_width="@dimen/swipe_fullscreen_icon_size"
                android:layout_height="@dimen/swipe_fullscreen_icon_size"
                android:background="@mipmap/icon_normal_zoom_out"
                android:contentDescription="@null" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>